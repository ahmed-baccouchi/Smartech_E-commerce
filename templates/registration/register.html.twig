{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .company-info {
            position: relative;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            font-family: Arial, sans-serif;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .company-info:before {
            content: "";
            background-image: url("{{ asset('images/home.jpg') }}");
            background-size: cover;
            background-position: center;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: 0.5;
        }

        .company-info .content {
            z-index: 1;
        }

        .company-info h1 {
            font-size: 48px;
            margin-bottom: 20px;
        }

        .company-info p {
            font-size: 18px;
            line-height: 1.6;
            max-width: 600px;
            margin: 0 auto;
        }
        .mb3{
            color:black;
        }
    </style>
{% endblock %}

{% block body %}
   

    {{ form_start(registrationForm) }}
   
        <div class="company-info">
     <div class="content">
       <h1>Register</h1>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-dark">Register</button>
       <a href="{{ path('app_login') }}" class="btn btn-secondary btn-rounded">Log in</a>
    {{ form_end(registrationForm) }}
    </div>
    </div>
{% endblock %}
