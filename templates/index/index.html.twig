{% extends 'base.html.twig' %} 

{% block title %}{% endblock %} 

{% block stylesheets %}
    {{ parent() }}
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .company-info {
            position: relative;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            font-family: Arial, sans-serif;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .company-info:before {
            content: "";
            background-image: url("{{ asset('images/home.jpg') }}");
            background-size: cover;
            background-position: center;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: 0.5;
        }

        .company-info .content {
            z-index: 1;
        }

        .company-info h1 {
            font-size: 48px;
            margin-bottom: 20px;
        }

        .company-info p {
            font-size: 18px;
            line-height: 1.6;
            max-width: 600px;
            margin: 0 auto;
        }
    </style>
{% endblock %}

{% block body %} 
    {% include 'navbar.html.twig' %}
    <div class="company-info">
        <div class="content">
            <h1>Smartech</h1>
            <p>
                Welcome to Smartech! We provide a wide range of high-quality accessories to enhance your computing experience. From keyboards and mice to monitors and cables, we've got you covered. Explore our collection and find the perfect accessories for your needs.
            </p>
        </div>
    </div>
{% endblock %}
